{
    "name": "demopr",
    "version": "1.0.0",
    "description": "demo pr",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^3.0.1",
        "@sap-cloud-sdk/util": "^3.0.1",
        "@sap/cds": "^6",
        "@sap/low-code-event-handler": "^1.2.1",
        "@sap/mdk-tools": "^1.3.1",
        "@sap/xsenv": ">=3.3.2 <3.3.3",
        "@sap/xssec": "^3.2.17",
        "express": "^4",
        "hdb": "^0.19.5",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.108.0",
        "sqlite3": "^5.0.4",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-demoprui": "cds watch --open demoprui/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy demopr --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            },
            "db": {
                "kind": "sql"
            },
            "app-service": {
                "impl": "@sap/low-code-event-handler"
            },
            "auth": {
                "kind": "xsuaa"
            }
        },
        "features": {
            "fetch_csrf": true
        }
    },
    "lcap": true,
    "sapux": [
        "app/demoprui"
    ]
}